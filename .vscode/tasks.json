{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "NX Serve",
      "type": "shell",
      "command": "npx",
      "args": ["nx", "run-many", "-t", "serve"],
      "options": {
        "env": {
          "NX_TASKS_RUNNER_OUTPUT_STYLE": "dynamic"
        }
      },
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Serve in macOS Terminal",
      "type": "shell",
      "command": "osascript",
      "args": [
        "-e",
        "tell application \"Terminal\" to do script \"cd ${workspaceFolder} && ./serve.sh\""
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
}
